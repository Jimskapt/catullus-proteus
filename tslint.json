{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,

    // console is important while development ...
    "no-console": false,
    // vue template & class seems to not understand access keys (`public`, `private`, `protected`, ` readonly`)
    "member-access": false,
    // empty Promises catch are not ignored, even with the `allow-empty-catch` parameter, dirty fix :
    "no-empty": false
  }
}
